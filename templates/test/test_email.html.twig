{% extends 'base.html.twig' %}

{% block title %}Test d'envoi d'email{% endblock %}

{% block body %}
<section class="py-5">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8 col-xl-6 text-center">
                <h1 class="mt-0">Test d'envoi d'email</h1>
                <hr class="divider" />
                <p class="text-muted mb-5">
                    {% if emailSent %}
                        Un email de test a été envoyé avec succès !
                    {% else %}
                        Une erreur s'est produite lors de l'envoi de l'email de test.
                    {% endif %}
                </p>
                <a class="btn btn-primary btn-xl" href="{{ path('app_home') }}">Retour à l'accueil</a>
            </div>
        </div>
    </div>
</section>
{% endblock %}
