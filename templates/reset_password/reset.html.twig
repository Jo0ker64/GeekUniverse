{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <section id="reset-password" class="py-5">
        <div class="container px-4">
            <div class="row gx-4 justify-content-center">
                <div class="col-lg-5">
                    <h1 class="mb-4">Réinitialiser le mot de passe</h1>
                    <p class="text-muted mb-4">Veuillez entrer votre nouveau mot de passe.</p>

                    {{ form_start(resetForm) }}
                    {{ form_errors(resetForm) }}
                    {{ form_row(resetForm.plainPassword, {label: 'Nouveau mot de passe'}) }}

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Réinitialiser</button>
                    </div>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
