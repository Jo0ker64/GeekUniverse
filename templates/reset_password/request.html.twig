{% extends 'base.html.twig' %}

{% block title %}Demande de réinitialisation de mot de passe{% endblock %}

{% block body %}
    <section id="reset-password-request" class="py-5">
        <div class="container px-4">
            <div class="row gx-4 justify-content-center">
                <div class="col-lg-5">
                    <h1 class="mb-4">Réinitialiser le mot de passe</h1>
                    <p class="text-muted mb-4">Entrez votre adresse email pour recevoir un lien de réinitialisation.</p>

                    {{ form_start(requestForm) }}
                    {{ form_errors(requestForm) }}
                    {{ form_row(requestForm.email, {label: 'Adresse email'}) }}

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </div>
                    {{ form_end(requestForm) }}

                    <p class="mt-3">
                        <a href="{{ path('app_login') }}">Retour à la connexion</a>
                    </p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
